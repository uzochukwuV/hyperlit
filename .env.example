# Hyperliquid Copy Trading Configuration
# Copy this file to .env and update with your actual values

# Required: Your wallet private key for trading (without 0x prefix)
# Generate a new wallet for testing or use your existing trading wallet
API_WALLET_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/copytrading?sslmode=disable

# Hyperliquid API Configuration (defaults are correct)
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_TESTNET_URL=https://api.hyperliquid-testnet.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
HYPERLIQUID_TESTNET_WS_URL=wss://api.hyperliquid-testnet.xyz/ws

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=info

# Trading Configuration
MAX_FOLLOWERS_PER_LEADER=100
DEFAULT_RISK_PERCENTAGE=0.02
MAX_ORDER_BATCH_SIZE=50
ORDER_BATCH_INTERVAL_MS=100
MAX_POSITION_SIZE=100000.0

# Rate Limiting (aligned with Hyperliquid limits)
MAX_API_REQUESTS_PER_MINUTE=1200
MAX_WEBSOCKET_MESSAGES=2000
MAX_WEBSOCKET_SUBSCRIPTIONS=1000

# Signature Configuration
SIGNATURE_CHAIN_ID=42161

# Optional Services
REDIS_URL=redis://localhost:6379
PYTHON_ANALYTICS_URL=http://localhost:8001

# Reconnection Settings
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY_MS=5000
ORDER_TIMEOUT_MS=10000